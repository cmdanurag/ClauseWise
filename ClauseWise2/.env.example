# Application Settings
APP_NAME=ClauseWise
APP_VERSION=1.0.0
DEBUG=True
HOST=0.0.0.0
PORT=8000

# Google Cloud Settings
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json
GCP_REGION=us-central1

# Document AI Settings
DOCUMENTAI_PROCESSOR_ID=your-processor-id
DOCUMENTAI_PROCESSOR_VERSION=rc

# AI Platform Settings
AIPLATFORM_MODEL_NAME=text-bison
AIPLATFORM_LOCATION=us-central1

# Storage Settings
GCS_BUCKET_NAME=clausewise-documents
MAX_FILE_SIZE_MB=10

# Database Settings (for future expansion)
DATABASE_URL=sqlite:///./clausewise.db

# Security Settings
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600